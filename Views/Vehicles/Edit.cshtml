@model NetAssessment.Models.Vehicle

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center fw-bolder text-decoration-underline">Edit</h1>

<h4 class="mt-3 text-center">Vehicle</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6 flex-column">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mt-3">
                <label asp-for="Brand" class="control-label fw-bold"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Vin" class="control-label fw-bold"></label>
                <input asp-for="Vin" class="form-control" />
                <span asp-validation-for="Vin" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Color" class="control-label fw-bold"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Year" class="control-label fw-bold"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="OwnerId" class="control-label fw-bold"></label>
                <select asp-for="OwnerId" class="form-control" asp-items="ViewBag.OwnerId"></select>
                <span asp-validation-for="OwnerId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 flex-column text-center">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3 flex-column text-center">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
