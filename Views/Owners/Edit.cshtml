@model NetAssessment.Models.Owner

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center fw-bolder text-decoration-underline">Edit</h1>

<h4 class="mt-4 text-center">Owner</h4>
<hr />
<div  class="row justify-content-center">
    <div class="col-md-6 flex-column">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group mt-4">
                <label asp-for="FirstName" class="control-label fw-bold"></label>
                <input asp-for="FirstName" class="form-control"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="LastName" class="control-label fw-bold"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="DriverLicense" class="control-label fw-bold"></label>
                <input asp-for="DriverLicense" class="form-control" />
                <span asp-validation-for="DriverLicense" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 flex-column text-center">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4 flex-column text-center">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
